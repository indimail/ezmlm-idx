#!/bin/sh
# postinst script for ezmlm-idx
set -e

sysconfdir=@sysconfdir@

case "$1" in
    configure)
    ;;

	abort-upgrade|abort-remove|abort-deconfigure)
	exit 0
   	;;

	*)
	echo "postinst called with unknown argument \`$1'" >&2
	exit 1
	;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#
mkdir -p ${sysconfdir}/ezmlm/global_vars
for i in QUEUE_BASE QUEUE_COUNT QUEUE_START
do
  if [ ! -f ${sysconfdir}/ezmlm/global_vars/$i -a ! -L ${sysconfdir}/ezmlm/global_vars/$i ] ; then
    ln -srf ${sysconfdir}/control/defaultqueue/$i ${sysconfdir}/ezmlm/global_vars/$i
  fi
done

exit 0
